<h1>Showing product details</h1>

<p><strong>category id: </strong><%= @product.category_id %></p>
<p><strong>number of place: </strong><%= @product.number_of_place %></p>
<p><strong>weight: </strong><%= @product.weight %></p>
<p><strong>age_of_product: </strong><%= @product.age_of_product %></p>
<p><strong>category id: </strong><%= @product.details %></p>
<p><strong>child_weight: </strong><%= @product.child_weight %></p>
<p><strong>marque: </strong><%= @product.marque %></p>
<p><strong>color: </strong><%= @product.color %></p>
<p><strong>prix_par_jour: </strong><%= @product.prix_par_jour %></p>
<p><strong>rating: </strong><%= @product.rating %></p>
<input class="btn btn-primary" type="submit" value="Submit">

<div class="col-8 mt-4">
       <div class="card text-center shadow mb-5 bg-white rounded">
         <div class="card-header font-italic">

           <%= @product.user.username if @product.user %>
         </div>
         <div class="card-body">
           <div class="card-text text-left"><%= simple_format(@product.details) %></div>
          <%= link_to "Edit", edit_product_path(@product), class: "btn btn-outline-info" %>
          <%= link_to "Delete", product_path(@product), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@product.created_at) %> ago,
          edited <%= time_ago_in_words(@product.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>
