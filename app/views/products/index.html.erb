
<div class="cover mb-4 d-flex align-items-center justify-content-center">
    <h1> Choisissez votre Baby Buggy</h1>
</div>

<div class="container grid produit text-center">

  <% @products.each do |product| %>
    <div class="card g-col-6">
      <p> Votre <%= product.category.product_name %>  <%= product.marque %> à partir de <%= product.prix_par_jour %>€/jour. </p>
      <p><%= product.city %></p>
      <%= link_to "Louer", product_path(product), class: "btn_louer mb-5 m-auto"%>
      <%= image_tag product.product_photo %>
    </div>
  <% end %>
 </div>
